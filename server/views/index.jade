extends layout

block content

  - var posts = getPosts(0,5)
  - var page  = 1
  - var first = posts[0]
  - posts.shift()
  article.jumbotron
    h3= first.title
    p.lead!= first.preview
  include includes/navbar
  .row
    - each post in posts
      include includes/postSnippet
    include includes/pagination
