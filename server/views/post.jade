extends layout

block content

  section.post.text.normal
    header
      h1
        a(href=post.url)
          = post.title
      span.date #{post.date.getMonth()+1}.#{post.date.getDate()}.#{post.date.getFullYear()}
      span#title #{post.author}
    article.post.content
      != post.content
    footer
      .tags
        - each tag in post.tags
          a(href=tagUrl(tag))
            span.label.label-info #{tag}
